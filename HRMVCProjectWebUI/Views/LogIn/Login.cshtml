		      		<form asp-action="LogIn" class="signin-form">
		      			<div class="form-group">
		      				<input asp-for="@Model.Email" type="email" class="form-control" placeholder="E-mail" required>
							  <span asp-validation-for="@Model.Email" class="text-danger"></span>
		      			</div>
					<div class="form-group">
					  <input id="password-field" asp-for="@Model.Password" type="password" class="form-control" placeholder="Şifre" required>
					  <span asp-validation-for="@Model.Password" class="text-danger"></span>
					  <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
					</div>
					<div class="text-danger" asp-validation-summary="ModelOnly"> </div>
					<div class="form-group">
	            		<button type="submit" class="form-control btn btn-primary submit px-3" @*asp-route-id="@id"*@>Giriş Yap</button>
