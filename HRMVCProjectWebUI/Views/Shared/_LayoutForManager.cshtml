<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <title>IKBurada</title>
    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/vendor/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/vendor/magnific-popup/magnific-popup.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" />

    <link href="~/assets/stylesheets/site.css" rel="stylesheet" />

    <!-- Employee List Specific Page Vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/select2/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/jquery-datatables-bs3/assets/css/datatables.css" />

    <!-- Check list Specific Page Vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/select2/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/jquery-datatables-bs3/assets/css/datatables.css" />

    <!--Notification Specific Page Vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/pnotify/pnotify.custom.css" />


    <!-- Theme CSS -->
    <link href="~/assets/stylesheets/theme.css" rel="stylesheet" />


    <!-- Skin CSS -->

    <link href="~/assets/stylesheets/skins/default.css" rel="stylesheet" />

    <!-- Theme Custom CSS -->
    <link href="~/assets/stylesheets/theme-custom.css" rel="stylesheet" />

    <!-- Head Libs -->
    <script src="~/assets/vendor/modernizr/modernizr.js"></script>

    <!-- JQUERY KISMI -->
    <script src="~/assets/jquery/jquery.min.js"></script>
    <script src="~/assets/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/assets/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <section class="body">

        <!-- start: header -->
        <header class="header" style="background-color:white">
            <div class="logo-container">
                 <a asp-action="ManagerHome" asp-controller="Manager" asp-route-id=@Context.Session.GetInt32("ManagerId")  class="logo">
                <img src="~/assets/images/logo.png" height="40px" width="auto" alt="" />
                </a>

                <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
                    <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                </div>
            </div>

            <!-- start: search & user box -->
            <div class="header-right">
                <span class="separator"></span>

                <div id="userbox" class="userbox">
                    <a href="#" data-toggle="dropdown">
                        <figure class="profile-picture">
                            @if (foto == null)
                            {
                                foto = "/assets/images/default.png";
                            }
                            <img src="@foto" alt="" class="img-circle" />
                        </figure>
                        <div class="profile-info">
                            @if (kullanıcıAdı == null)
                            {
                                kullanıcıAdı = "Kullanıcı Adı";
                            }
                            <span class="name">@kullanıcıAdı</span>
                            <span class="role">Yönetici</span>
                        </div>

                        <i class="fa custom-caret"></i>
                    </a>

                    <div class="dropdown-menu">
                        <ul class="list-unstyled">
                            <li class="divider"></li>
                            @* <li>
                            <a asp-action="EmployeeHome" asp-controller="Employee" asp-route-id="@id" role="menuitem" tabindex="-1">Profilim</a>
                            </li>*@
                            @*<li>
                            <a role="menuitem" tabindex="-1" href="#" data-lock-screen="true"><i class="fa fa-lock"></i> Lock Screen</a>
                            </li>*@
                            <li>
                                <a role="menuitem" tabindex="-1" asp-controller="Employee" asp-action="LogOut" asp-area="UserArea">Çıkış Yap</a>
                            </li>
                        </ul>
                    </div>
                </div>


                @* <partial name="_LoginPartial" />*@
            </div>
            <!-- end: search & user box -->
        </header>
        <!-- end: header -->

        <div class="inner-wrapper">
            <!-- start: sidebar -->
            <aside id="sidebar-left" class="sidebar-left" style="background-color: #734ba9 ">

                <div class="sidebar-header">
                    @*<div class="sidebar-title">
                    Navigation
                    </div>*@
                    <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle" style="background-color: #734ba9 ">
                        <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                    </div>
                </div>

                <div class="nano">
                    <div class="nano-content">
                        <nav id="menu" class="nav-main" role="navigation" style="background-color: #734ba9 ">
                            <ul class="nav nav-main">
                                @*<li>
                                      <a asp-action="ManagerHome" asp-controller="Manager" asp-area="ManagerArea" asp-route-id=@Context.Session.GetInt32("ManagerId");>
                                    <i class="fa fa-home" aria-hidden="true"></i>
                                    <span>Anasayfa</span>
                                    </a>
                                </li>*@

                                <li class="nav-parent">
                                    <a>
                                        <i class="fa fa-copy" aria-hidden="true"></i>
                                        <span>Çalışan</span>
                                    </a>
                                    <ul class="nav nav-children">
                                        <li>
                                            <a asp-area="ManagerArea" asp-action="EmployeeList" asp-controller="Manager">
                                                <span class="pull-right label label-primary">@Context.Session.GetString("employeesCount")</span>
                                                <i class="fa fa-users" aria-hidden="true"></i>
                                                <span>Çalışanlar</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="AddEmployee" asp-controller="Manager" asp-area="ManagerArea" >
                                                <i class="fa  fa-plus" aria-hidden="true"></i>
                                                <span>Çalışan Ekle</span>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-parent">
                                    <a class="fa fa-money" aria-hidden="true" asp-action="Index" asp-controller="CreditCards" asp-area="ManagerArea" >
                                                <span>Kredi Kartlarım</span>
                                    </a>
                                </li>
                               @* <li class="nav-parent">
                                    <a class="fa fa-money" aria-hidden="true" asp-action="Wallet" asp-controller="Manager" asp-area="ManagerArea" asp-route-id="@Context.Session.GetInt32("ManagerId")">
                                                <span>Cüzdan</span>
                                    </a>
                                </li>*@
                                <li class="nav-parent">
                                    <a>
                                        <i class="fa fa-money" aria-hidden="true"></i>
                                        <span>Avans</span>
                                    </a>
                                    <ul class="nav nav-children">
                                        <li>
                                            <a asp-action="AdvancePaymentList" asp-controller="AdvancePayments" asp-area="ManagerArea" asp-route-id="@Context.Session.GetInt32("ManagerId")">
                                                <span>Avans Listesi</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="AdvancePayments" asp-action="AdvancePaymentCheck" asp-area="ManagerArea">
                                                Bekleyen Avans Talepleri
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-parent">
                                    <a>
                                        <i class="fa fa-tags" aria-hidden="true"></i>
                                        <span>Harcama</span>
                                    </a>
                                    <ul class="nav nav-children">
                                        <li>
                                            <a asp-action="CostList" asp-controller="Costs" asp-area="ManagerArea" asp-route-id="@Context.Session.GetInt32("ManagerId")">
                                                <span>Harcama Listesi</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Costs" asp-action="CostCheck" asp-area="ManagerArea">
                                                Bekleyen Harcama Talepleri
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-parent">
                                    <a>
                                        <i class="fa fa-beer" aria-hidden="true"></i>
                                        <span>İzin</span>
                                    </a>
                                    <ul class="nav nav-children">
                                        <li>
                                            <a asp-action="PermissionList" asp-controller="Permissions" asp-area="ManagerArea" asp-route-id="@Context.Session.GetInt32("ManagerId")">
                                                <span>İzin Listesi</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Permissions" asp-action="PermissionCheck" asp-area="ManagerArea">
                                                Bekleyen İzin Talepleri
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                @if (kullanıcıAdı != null)
                                {
                                    <p class="menu-position text-white display-3">
                                        &emsp;&nbsp;
                                        Yönetici olarak giriş yapıldı.
                                    </p>
                                }

                            </ul>
                        </nav>
                    </div>

                </div>

            </aside>
            <!-- end: sidebar -->

            <section role="main" class="content-body">
                <header class="page-header" style="background-color: #734ba9 ">
                    <h2>@header</h2>

                    <div class="right-wrapper pull-right">
                        <ol class="breadcrumbs">
                            <li>
                                @*<a asp-action="Index" asp-controller="Employee">*@
                                <i class="fa fa-home"></i>
                                @*</a>*@
                            </li>

                            <li>
                                @if (header == "Anasayfa")
                                {
                                    header = "";
                                }
                                <span>
                                    @header
                                </span>
                            </li>
                            <li><span>@header2</span></li>
                        </ol>
                    </div>
                </header>

                <div class="container" >
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>

            </section>
        </div>
    </section>


    <!-- Vendor -->
    <script src="~/assets/vendor/jquery/jquery.js"></script>
    <script src="~/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="~/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!--Emloyee List Specific Page Vendor -->
    <script src="~/assets/vendor/select2/select2.js"></script>
    <script src="~/assets/vendor/jquery-datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="~/assets/vendor/jquery-datatables-bs3/assets/js/datatables.js"></script>

    <!-- Specific Page Vendor -->
    <script src="~/assets/vendor/owl-carousel/owl.carousel.js"></script>
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <!-- Theme Base, Components and Settings -->
    <script src="~/assets/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/assets/javascripts/theme.init.js"></script>


    <!-- Examples -->
    @* <script src="~/assets/javascripts/forms/examples.validation.js"></script>*@
    <!-- Specific Page Vendor check -->
    <script src="~/assets/vendor/select2/select2.js"></script>
    <script src="~/assets/vendor/jquery-datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/vendor/jquery-datatables-bs3/assets/js/datatables.js"></script>

    <!-- NoficTİONLAR Examples -->
    <script src="~/assets/javascripts/ui-elements/examples.notifications.js"></script>
    <!-- notif Specific Page Vendor -->
    <script src="~/assets/vendor/pnotify/pnotify.custom.js"></script>

    <!-- Examples  check-->
    <script src="~/assets/javascripts/tables/examples.datatables.editable.js"></script>

    <!-- Employee list examples -->
    <script src="~/assets/javascripts/tables/examples.datatables.default.js"></script>
    <script src="~/assets/javascripts/tables/examples.datatables.row.with.details.js"></script>
    <script src="~/assets/javascripts/tables/examples.datatables.tabletools.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>