@using HRMVCProjectEntities.Concrete.Enums
@model IEnumerable<HRMVCProjectEntities.Concrete.AdvancePayment>

@{
    ViewData["Title"] = "Avans Listesi";
}
<header class="page-header">
    <h2>Avans Listesi</h2>
    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="index.html">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Avans</span></li>
            <li><span>Avans Listesi</span></li>
        </ol>
    </div>
</header>

<h2>Avans Listesi</h2>


<table class="table bold-olsun">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReplyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReplyState)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount) ₺
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReplyDate)
                </td>
                <td>
                    @{
                        if (item.ReplyState == ReplyState.Onaylandı)
                        {                                  
                            <span>&#128994</span>                        
                        }
                        if (item.ReplyState == ReplyState.OnaylanMAdı)
                        {
                            <span>&#128308;</span>
                        }
                        if (item.ReplyState == ReplyState.Beklemede)
                        {
                            <span>&#128993;</span>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
