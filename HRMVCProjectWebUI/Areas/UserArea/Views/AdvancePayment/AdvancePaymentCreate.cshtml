@model EmployeeAdvanceVM

@{
    ViewData["Title"] = "Avans Oluşturma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
	<h2>Avans Talebi</h2>
	<div class="right-wrapper pull-right">
		<ol class="breadcrumbs">
			<li>
				<a href="index.html">
					<i class="fa fa-home"></i>
				</a>
			</li>
			<li><span>Avans</span></li>
			<li><span>Avans Talebi</span></li>
		</ol>				
    </div>
</header>

<h2>Avans Talebi Oluşturma Sayfası</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdvancePaymentCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <label asp-for="AdvancePayment.Amount" class="control-label"></label>
                <input asp-for="AdvancePayment.Amount" class="form-control" />
                <span asp-validation-for="AdvancePayment.Amount" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="AdvancePayment.Description"  class="control-label"></label>
                <textarea  asp-for="AdvancePayment.Description" class="form-control" ></textarea>
                <span asp-validation-for="AdvancePayment.Description" class="text-danger"></span>
            </div>
                
            <div class="form-group">
                <input type="submit" value="Talep Oluştur" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
