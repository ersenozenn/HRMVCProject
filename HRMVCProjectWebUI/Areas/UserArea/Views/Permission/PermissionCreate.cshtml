@model PermissionAndTypesVM

@{
    ViewData["Title"] = "İzin Oluştur";
    Layout = "_LayoutForEmployee";
}

<h2>İzin Talebi Oluştur</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-action="PermissionCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Permission.StartingDate" class="control-label"></label>
                <input type="date" asp-for="Permission.StartingDate" class="form-control" />
                <span asp-validation-for="Permission.StartingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.EndDate" class="control-label"></label>
                <input type="date" asp-for="Permission.EndDate" class="form-control" />
                <span asp-validation-for="Permission.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.AdressToGo"  class="control-label"></label>
                <input asp-for="Permission.AdressToGo" class="form-control" />
                <span asp-validation-for="Permission.AdressToGo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.PermissionTypeID" class="control-label"></label>
                <select asp-for="Permission.PermissionTypeID" class ="form-control" asp-items="ViewBag.PermissionTypeID">
                    @{
                        foreach (var item in Model.PermissionTypes)
                        {
                            <option value="@item.Id">@item.PermissionName</option>
                        }
                    }
                </select>
            </div>
            	@*<div class="text-danger" asp-validation-summary="ModelOnly"> </div>*@
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-default" asp-route-id="@Model.EmployeeId" asp-controller="Permission"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
