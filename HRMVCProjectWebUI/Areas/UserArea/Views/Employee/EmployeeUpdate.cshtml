@model HRMVCProjectEntities.Concrete.Employee

@{
    ViewData["Title"] = "Çalışan Düzenle";
}
<header class="page-header">
	<h2>Çalışan Düzenle</h2>
	<div class="right-wrapper pull-right">
		<ol class="breadcrumbs">
			<li>
				<a href="index.html">
					<i class="fa fa-home"></i>
				</a>
			</li>
			<li><span>Çalışan</span></li>
			<li><span>Çalışan Düzenle</span></li>
		</ol>				
    </div>
</header>

<h2>Güncelleme Sayfası</h2>

<h4>Çalışan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @if(@Model.UserPhotoPath != null)
                {
                    <img src="@Url.Content(@Model.UserPhotoPath)" width="100" height="100" class="img-circle"/>
                }
                else
                {
                    <img src="@Url.Content("~/assets/images/default.jfif")" width="100" height="100" class="img-circle"/>
                }
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <h5>@Html.DisplayFor(a=>a.Email)</h5>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input type="tel" asp-for="Telephone" class="form-control"  pattern="+90[7-9]{2}-[0-9]{3}-[0-9]{4}" value="+90" required/>
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPhoto" class="control-label">Upload Photo(jpeg/git/png):</label>
                <input type="file" asp-for="UserPhoto" class="form-control" accept="image/jpeg,image/gif,image/png" />
                <span asp-validation-for="UserPhoto" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

